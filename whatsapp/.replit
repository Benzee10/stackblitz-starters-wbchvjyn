[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "VITE_HOST=0.0.0.0 VITE_PORT=5000 npx vite --host 0.0.0.0 --port 5000 --force"
